

#ifndef INC_BUZZER_H_
#define INC_BUZZER_H_

#include "main.h"

typedef enum StateBuzzer_
{
	MUSIC_ON,
	MUSIC_OFF,

}StateBuzzer;

typedef struct _buzzer
{
	StateBuzzer state;
	int currentNote;
	int indexNote;
	int counter;

}BUZZER;

void buzzerInit(BUZZER* buzzer);
void playNote(int indexNote);
void playNextNote();
void buzzerOnTimerInterrupt();


#endif /* INC_BUZZER_H_ */
